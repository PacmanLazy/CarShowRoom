@using System.Collections
@model Status

@{
    Layout = "_Admin";
}
<div class="admin-form">
    @using (Html.BeginForm("CreateStatus", "Admin", "post"))
    {
        <legend>Create new Status</legend>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, "Status Name", new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Name, "Status Name", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="submit" value="Create Status" class="btn btn-default" />
        </div>
    }
</div>