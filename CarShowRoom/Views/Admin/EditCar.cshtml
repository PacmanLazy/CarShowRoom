@model Car
@{
    Layout = "_Admin";
}

<div class="admin-form">
    <h2>EditCar</h2>
    <hr />
    <form asp-action="EditCar" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Model" class="control-label"></label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Modifcn" class="control-label"></label>
            <input asp-for="Modifcn" class="form-control" />
            <span asp-validation-for="Modifcn" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProviderId" class="control-label"></label>
            <select asp-for="ProviderId" class="form-control" asp-items="ViewBag.Provs"></select>
            <span asp-validation-for="ProviderId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Color" class="control-label"></label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ReceiptDate" class="control-label"></label>
            <input asp-for="ReceiptDate" class="form-control" />
            <span asp-validation-for="ReceiptDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StarterPrice" class="control-label"></label>
            <input asp-for="StarterPrice" class="form-control" />
            <span asp-validation-for="StarterPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StatusId" class="control-label"></label>
            <select asp-for="StatusId" class="form-control" asp-items="ViewBag.Stats"></select>
            <span asp-validation-for="StatusId" class="text-danger"></span>
        </div>
        <fieldset>
            <legend>Tech Specs</legend>
            <div class="form-form-group">
                @**Length*@
                <label asp-for="Specs.Length" class="control-label">Length</label>
                <input class="form-control" asp-for="Specs.Length" />
                <span asp-validation-for="Specs.Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                @**Width*@
                <label asp-for="Specs.Width" class="control-label">Width</label>
                <input class="form-control" asp-for="Specs.Width" />
                <span asp-validation-for="Specs.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                @**Height*@
                <label asp-for="Specs.Height" class="control-label">Height</label>
                <input class="form-control" asp-for="Specs.Height" />
                <span asp-validation-for="Specs.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                @**NumOfSeats*@
                <label asp-for="Specs.NumOfSeats" class="control-label">Number of Seats</label>
                <input type="number" class="form-control" asp-for="Specs.NumOfSeats" />
                <span asp-validation-for="Specs.NumOfSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                @**Weight*@
                <label asp-for="Specs.Weight" class="control-label">Weight</label>
                <input class="form-control" asp-for="Specs.Weight" />
                <span asp-validation-for="Specs.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                @**MaxSpeed*@
                <label asp-for="Specs.MaxSpeed" class="control-label">Max Speed</label>
                <input class="form-control" asp-for="Specs.MaxSpeed" />
                <span asp-validation-for="Specs.MaxSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                @**EngineType*@
                <label asp-for="Specs.EngineType" class="control-label">Engine Type</label>
                <input class="form-control" asp-for="Specs.EngineType" />
                <span asp-validation-for="Specs.EngineType" class="text-danger"></span>
            </div>
            <div class="form-group">
                @**EngineVolume*@
                <label asp-for="Specs.EngineVolume" class="control-label">Engine Volume</label>
                <input class="form-control" asp-for="Specs.EngineVolume" />
                <span asp-validation-for="Specs.EngineVolume" class="text-danger"></span>
            </div>
            <div class="form-group">
                @**SupplySystem*@
                <label asp-for="Specs.SupplySystem" class="control-label">Supply System</label>
                <input class="form-control" asp-for="Specs.SupplySystem" />
                <span asp-validation-for="Specs.SupplySystem" class="text-danger"></span>
            </div>
            <div class="form-group">
                @**FuelConsumption*@
                <label asp-for="Specs.FuelConsumption" class="control-label">Fuel Consumption</label>
                <input class="form-control" asp-for="Specs.FuelConsumption" />
                <span asp-validation-for="Specs.FuelConsumption" class="text-danger"></span>
            </div>
        </fieldset>
        <div class="form-group">
            <h4>Upload car Images</h4>
            <input class="form-control" type="file" name="files" multiple />
            @*<span class="text-danger" asp-validation-for="Files"></span>*@
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </form>
    <div>
        <a asp-action="ViewCars">Back to List</a>
    </div>
</div>

